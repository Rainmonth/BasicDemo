<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="160dp"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/float_view_iv_cover"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="30dp"
        android:src="@drawable/icon_user_login_default"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/float_view_iv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/float_view_icon_play"
        app:layout_constraintBottom_toBottomOf="@+id/float_view_iv_cover"
        app:layout_constraintEnd_toEndOf="@+id/float_view_iv_cover"
        app:layout_constraintStart_toStartOf="@+id/float_view_iv_cover"
        app:layout_constraintTop_toTopOf="@+id/float_view_iv_cover" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/grout_stay_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="float_view_iv_stay_left_body,float_view_iv_stay_left_arm "
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/float_view_iv_stay_left_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/float_view_icon_stay_left_kada_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/float_view_iv_stay_left_arm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/float_view_icon_stay_left_kada_arm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/float_view_iv_stay_left_body" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/grout_stay_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="float_view_iv_stay_right_body,float_view_iv_stay_right_arm "
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/float_view_iv_stay_right_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/float_view_icon_stay_right_kada_body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/float_view_iv_stay_right_arm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="66dp"
        android:src="@drawable/float_view_icon_stay_left_kada_arm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/float_view_iv_stay_right_body" />

    <ImageView
        android:id="@+id/float_view_iv_music_mark"
        android:layout_width="28dp"
        android:layout_height="42dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/float_view_icon_music_mark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>